# MiniMax API Configuration
# =========================
# Required for all MiniMax endpoints (text, image, voice, music, video generation)
# Get your API key from: https://platform.minimax.ai/
MINIMAX_API_KEY=your_minimax_api_key_here

# Optional: Specify which MiniMax model to use for different tasks
MINIMAX_CHAT_MODEL=abab6.5-chat
MINIMAX_IMAGE_MODEL=minimax-image-01
MINIMAX_VIDEO_MODEL=video-01
MINIMAX_TTS_MODEL=speech-01
MINIMAX_MUSIC_MODEL=music-01

# Google Drive Integration
# =========================
# Service account credentials for uploading generated assets to Google Drive
# Create a service account at: https://console.cloud.google.com/iam-admin/serviceaccounts
# Download the JSON key and either:
#   1. Set the path to the JSON file:
GDRIVE_SERVICE_ACCOUNT_FILE=/path/to/service-account-key.json
#   2. Or paste the entire JSON as a string (useful for cloud deployments):
# GDRIVE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"...",...}'

# Google Drive folder IDs for organizing platform-specific assets
# Find folder ID in the URL: https://drive.google.com/drive/folders/[FOLDER_ID]
GDRIVE_ROOT_FOLDER_ID=your_root_folder_id_here
GDRIVE_INSTAGRAM_FOLDER_ID=your_instagram_folder_id
GDRIVE_TIKTOK_FOLDER_ID=your_tiktok_folder_id
GDRIVE_PINTEREST_FOLDER_ID=your_pinterest_folder_id

# Database Configuration
# ======================
# PostgreSQL connection for storing menu items, processing status, and metadata
DATABASE_URL=postgresql://user:password@localhost:5432/toast_social

# Optional: SQLite for local development
# DATABASE_URL=sqlite:///./local_dev.db

# Toast POS Integration (Future)
# ===============================
# Credentials for syncing menu data from Toast POS system
# Documentation: https://doc.toasttab.com/
TOAST_API_KEY=your_toast_api_key_here
TOAST_API_SECRET=your_toast_api_secret_here
TOAST_RESTAURANT_GUID=your_restaurant_guid
TOAST_MANAGEMENT_GROUP_GUID=your_management_group_guid

# Email Service (Future)
# ======================
# SMTP credentials for sending notifications and reports
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=team@41bistro.com

# Pipeline Configuration
# ======================
# Tune pipeline behavior without code changes

# Number of dishes to process in each batch run
PIPELINE_BATCH_SIZE=10

# MiniMax style preset for image enhancement (e.g., "hero", "overhead", "ambiance")
MINIMAX_STYLE_PRESET=hero

# Voice profile for narration (e.g., "warm", "professional", "energetic")
VOICE_PROFILE=warm

# Background music vibe (e.g., "ambient", "upbeat", "classical")
MUSIC_VIBE=ambient

# Maximum retries for API calls
MAX_RETRIES=3

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=60

# Social Media Platform Credentials (Future - when posting is re-enabled)
# ========================================================================

# Instagram Business Account
INSTAGRAM_ACCESS_TOKEN=your_instagram_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_business_account_id

# TikTok Business Account
TIKTOK_ACCESS_TOKEN=your_tiktok_token
TIKTOK_OPEN_ID=your_open_id

# Pinterest Business Account
PINTEREST_ACCESS_TOKEN=your_pinterest_token
PINTEREST_BOARD_ID=your_board_id

# Google Business Profile
GOOGLE_BUSINESS_ACCOUNT_ID=your_account_id
GOOGLE_BUSINESS_LOCATION_ID=your_location_id

# Make.com Integration (Future)
# ==============================
# Webhook URLs for triggering automated workflows
MAKE_WEBHOOK_POST_CONTENT=https://hook.us1.make.com/your_webhook_id
MAKE_WEBHOOK_NOTIFY_TEAM=https://hook.us1.make.com/your_webhook_id

# Application Settings
# ====================
# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug logging
DEBUG=true

# Secret key for session management (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS origins (comma-separated, for API access)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
