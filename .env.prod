# Production environment overrides
ENVIRONMENT=production
DEBUG=false

# MiniMax API
MINIMAX_BASE_URL=https://api.minimax.io
MINIMAX_API_KEY=use_secret_manager
MINIMAX_CHAT_MODEL=MiniMax-M2
MINIMAX_IMAGE_MODEL=image-01
MINIMAX_TTS_MODEL=speech-2.6-hd
MINIMAX_MUSIC_MODEL=music-2.0
MINIMAX_VIDEO_MODEL=MiniMax-Hailuo-2.3

RATE_LIMIT_RPM=60
MAX_RETRIES=3

# Google Drive (service account must be mounted via secret)
GDRIVE_ROOT_FOLDER_ID=
GDRIVE_SERVICE_ACCOUNT_FILE=/secrets/gcp/service-account.json

# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# QA thresholds
QA_MIN_IMAGE_BYTES=10240
QA_MIN_AUDIO_BYTES=1024
QA_MIN_VIDEO_BYTES=51200

